SC2_infl_category = {
	SC2_simple_give_infl = {
		visible = {
			ROOT = {
				SC2_can_infl = yes
			}
			
		}
		available = {
		}
		modifier = {
		}
		cost = 30
		#days_remove = 30
		days_re_enable = 3
		fire_only_once = no
		complete_effect = {
			add_to_variable = { ROOT.SC2_infl_value = 5 }
		}
		remove_effect = {
			
		}
		ai_will_do = {
			factor = 30
		}
	}
